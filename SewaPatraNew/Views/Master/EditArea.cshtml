@model SewaPatra.Models.Area

@{
    ViewBag.Title = "Edit Area";
}

@if (TempData["Message"] != null)
{
    <div id="toastMessage" class="custom-toast">
        <i class="bi bi-check-circle-fill me-2"></i>@TempData["Message"]
    </div>
}
<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="pagetitle mt-2">
                        <h1>Edit Area</h1>
                        <nav>
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item">Master</li>
                                <li class="breadcrumb-item">Area</li>
                                <li class="breadcrumb-item active">Edit Area</li>
                            </ol>
                        </nav>
                    </div>
                    <hr />
                    <!-- Vertical Form -->
                    <form class="row g-3" method="post" asp-action="EditArea" asp-controller="Master">
                        <input type="hidden" asp-for="Id" />
                        <div class="col-3">
                            <label asp-for="Area_name" class="form-label">Area Name</label>
                            <input type="text" class="form-control" asp-for="Area_name" id="areaName">
                        </div>
                        <div class="col-3">
                            <label asp-for="Area_type" class="form-label">Area Type</label>
                            <input type="text" class="form-control" asp-for="Area_type" id="areaType">
                        </div>
                        <div class="col-3">
                            <label asp-for="Under" class="form-label">Area Under</label>
                            <input type="text" class="form-control" asp-for="Under" id="areaUnder">
                        </div>
