                    <option value="True" @(Model.Active == "True" ? "selected" : "")>Active</option>
                    <option value="False" @(Model.Active == "False" ? "selected" : "")>Inactive</option>
                </select>
            </div>
        </div>  *@

                        <div class="col-md-4">
                            <label asp-for="Active" class="form-label">Status</label>
                            <select class="form-select" asp-for="Active" name="Active" aria-label="Select Status">
                                <option selected>Choose Status</option>
                                <option value="true">Active</option>
                                <option value="false">Inactive</option>
                            </select>
                        </div>


                        <div class="text-left mt-3">
                            <button type="submit" class="btn btn-primary">Save</button>
                            <a asp-action="DonationBoxList" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form> <!-- Vertical Form -->
                </div>
            </div>
        </div>
    </div>
</section>
