@model SewaPatra.Models.Donor

@{
    ViewBag.Title = "Add Donor";
}
@if (TempData["Message"] != null)
{
    <div id="toastMessage" class="custom-toast">
        <i class="bi bi-check-circle-fill me-2"></i>@TempData["Message"]
    </div>
}
<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">

                <div class="card-body">
                    <div class="pagetitle mt-2">
                        <h1>Add Donor</h1>
                        <nav>
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item">Master</li>
                                <li class="breadcrumb-item">Donor</li>
                                <li class="breadcrumb-item active">Add Donor</li>
                            </ol>
                        </nav>
                    </div>
                    <hr />
                    <form class="row g-3" method="post" asp-action="Donor" asp-controller="Master">

                        <div class="col-md-12">
                            <label asp-for="Name" class="form-label">Name</label>
                            <input type="text" class="form-control" id="Name" asp-for="Name" required>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" asp-for="Email" required>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Mobile_No" class="form-label">Mobile No</label>
                            <input type="tel" class="form-control" id="mobileNo" asp-for="Mobile_No" required>
                        </div>

                        <div class="col-md-4">
                            <label asp-for="Address" class="form-label">Address</label>
                            <input type="text" class="form-control" id="address" asp-for="Address" required>
                        </div>

                         <!-- Location -->
                        <div class="col-md-4">
                            <label asp-for="Location" class="form-label">Location</label>
                            <input type="text" class="form-control" id="Location" asp-for="Location">
                        </div>

                        <div class="col-md-4">
                            <label asp-for="Mobile_no2" class="form-label">Mobile No 2</label>
                            <input type="tel" class="form-control" id="MobileNo2" asp-for="Mobile_no2">
                        </div>

                        <!-- City -->
                        <div class="col-md-4">
                            <label for="City" class="form-label">City</label>
                            <input type="text" class="form-control" asp-for="City" name="City">
                        </div>
                        <div class="col-md-4">
                            <label asp-for="Area" class="form-label">Area</label>
                            @if (Context.Session.GetString("userRole") == "3") // Coordinator
                            {
                                <select id="area" asp-items="@ViewBag.Areas" class="form-select" asp-for="Area" disabled></select>
                            }else{
                                <select id="area" asp-items="@ViewBag.Areas" class="form-select" asp-for="Area" required></select>
                            }
                        </div>

                        <div class="col-md-4">
                            <label asp-for="Coordinator" class="form-label">Coordinator</label>
                            @if (Context.Session.GetString("userRole") == "3") // Coordinator
                            {
                                <select id="coordinator" class="form-select" asp-items="@ViewBag.Coordinators" asp-for="Coordinator" disabled></select>
                            }
                            else
                            {
                                <select id="coordinator" class="form-select" asp-items="@ViewBag.Coordinators" asp-for="Coordinator" required></select>
                            }
                            
                        </div>

                        <div class="col-md-4">
                            <label asp-for="Active" class="form-label">Status</label>
                            <select class="form-select" id="Status" asp-for="Active" required>
                                <option selected>select Status</option>
                                <option value="true" selected>Active</option>
                                <option value="false">Inactive</option>
                            </select>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Submit</button>
                            <a href="~/Master/DonorList" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<script>
    $(document).ready(function() {
        //for searchable dropdown
        $('select').select2({
        placeholder: 'Search here...',
                width: 'resolve'
        });
    });
</script>