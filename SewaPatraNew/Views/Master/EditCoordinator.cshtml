@model SewaPatra.Models.Coordinator

@{
    ViewBag.Title = "Edit Coordinator";
}

@if (TempData["Message"] != null)
{
    <div id="toastMessage" class="custom-toast">
        <i class="bi bi-check-circle-fill me-2"></i>@TempData["Message"]
    </div>
}
<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">

                <div class="card-body">
                    <div class="pagetitle mt-2">
                        <h1>Edit Coordinator</h1>
                        <nav>
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item">Master</li>
                                <li class="breadcrumb-item">Coordinator</li>
                                <li class="breadcrumb-item active">Edit Coordinator</li>
                            </ol>
                        </nav>
                    </div>
                    <hr />
                    <!-- Vertical Form -->
                    <form class="row g-3" method="post" asp-action="EditCoordinator" asp-controller="Master">
                        <input type="hidden" asp-for="Id" />

                        <div class="col-3">
                            <label asp-for="Name" class="form-label">Name</label>
                            <input type="text" class="form-control" asp-for="Name" id="Name" />
                        </div>

                        <div class="col-3">
                            <label asp-for="Mobile_No" class="form-label">Mobile Number</label>
                            <input type="text" class="form-control" asp-for="Mobile_No" id="Mobile_No" />
                        </div>

                        <div class="col-3">
                            <label asp-for="Alternate_Mobile_No" class="form-label">Alternate Mobile Number</label>
                            <input type="text" class="form-control" asp-for="Alternate_Mobile_No" id="Alternate_Mobile_No" />
                        </div>

                        <div class="col-3">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input type="email" class="form-control" asp-for="Email" id="Email" />
                        </div>

                        <div class="col-3">
                            <label asp-for="Address" class="form-label">Address</label>
                            <input type="text" class="form-control" asp-for="Address" id="Address" />
                        </div>

                        <div class="col-3">
                            <label asp-for="City" class="form-label">City</label>
                            <input type="text" class="form-control" asp-for="City" id="City" />
                        </div>
                        <div class="col-3">
                            <label asp-for="Area_Under" class="form-label">Area Under</label>
                            <div>
                                <select asp-for="Area_Under" asp-items="@ViewBag.Areas" class="form-select" aria-label="Select Coordinator"></select>
                            </div>
                        </div>
                        <!-- Report To -->
                        <div class="col-md-4">
                            <label asp-for="Report_to" class="col-form-label">Reports To</label>
                            <select asp-for="Report_to" asp-items="@ViewBag.Coordinators" class="form-select" aria-label="Select Coordinator"></select>
                            <span asp-validation-for="Report_to" class="text-danger"></span>
                        </div>
                        <div class="col-md-4">
                            <label asp-for="Active" class="form-label">Status</label>
                            <select class="form-select" asp-for="Active" required>
                                <option selected>select Status</option>
                                <option value="true">Active</option>
                                <option value="false">Inactive</option>
                            </select>
                        </div>
