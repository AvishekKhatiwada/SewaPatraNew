                            <button type="submit" class="btn btn-primary">Save</button>
                            <a asp-action="CoordinatorList" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form> <!-- Vertical Form -->
                </div>
            </div>
        </div>
    </div>
</section>