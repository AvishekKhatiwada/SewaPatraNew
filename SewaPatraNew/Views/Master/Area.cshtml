@model SewaPatra.Models.Area

@{
    ViewBag.Title = "Add Area";
}
@if (TempData["Message"] != null)
{
    <div id="toastMessage" class="custom-toast">
        <i class="bi bi-check-circle-fill me-2"></i>@TempData["Message"]
    </div>
}
<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="pagetitle mt-2">
                        <h1>Add Area</h1>
                        <nav>
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item">Master</li>
                                <li class="breadcrumb-item">Area</li>
                                <li class="breadcrumb-item active">Add Area</li>
                            </ol>
                        </nav>
                    </div>
                    <hr />
                    <!-- Vertical Form -->
                    <form class="row g-3" method="post" asp-action="Area" asp-controller="Master">
                        <div class="col-3">
                            <label asp-for="Area_name" class="form-label">Area Name</label>
                            <input type="text" class="form-control" asp-for="Area_name" id="areaName" required>
                            <span asp-validation-for="Area_name" class="text-danger"></span>
                        </div>
                        <div class="col-3">
                            <label asp-for="Area_type" class="form-label">Area Type</label>
                            <input type="text" class="form-control" asp-for="Area_type" id="areaType" required>
                            <span asp-validation-for="Area_type" class="text-danger"></span>
                        </div>
                        <div class="col-3">
                            <label asp-for="Under" class="form-label">Area Under</label>
                            <input type="text" class="form-control" asp-for="Under" id="areaUnder">
                            <span asp-validation-for="Under" class="text-danger"></span>
                        </div>
                        @*  <div class="row mb-3">
                                <label asp-for="Under" class="form-label">Under</label>
                                <div class="col-3">
                                    <select asp-for="Under" class="form-select" aria-label="Select Coordinator">
                                        <option selected>select Coordinator</option>
                                        <option value="1">Ram</option>
                                        <option value="2">Shyam</option>
                                    </select>
                                </div>
                            </div> *@
                        <div class="text-Left">
                            <button type="submit" class="btn btn-primary">Save</button>
                            <a href="~/Master/AreaList" class="btn btn-primary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>  
