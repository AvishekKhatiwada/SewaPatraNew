@{
    ViewBag.Title = "Dashboard";
}
<section class="section dashboard">
    <div class="row">
        <div class="col-lg-12">
            <div class="row">
                <!-- Sales Card -->
                <div class="col-xxl-4 col-md-6">
                    <div class="card info-card sales-card">
                        <div class="card-body">
                            <h5 class="card-title">Area <span>| Total</span></h5>
                            <div class="d-flex align-items-center">
                                <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                                    <i class="bi bi-geo-fill"></i>
                                </div>
                                <div class="ps-3">
                                    <h6>@ViewBag.AreaCount</h6>
                                    <span class="text-success small pt-1 fw-bold">@ViewBag.AreaCountLastWeek</span> <span class="text-muted small pt-2 ps-1">new in last week</span>

                                </div>
                            </div>
                        </div>

                    </div>
                </div><!-- End Sales Card -->
                <!-- Revenue Card -->
                <div class="col-xxl-4 col-md-6">
                    <div class="card info-card revenue-card">
                        <div class="card-body">
                            <h5 class="card-title">Coordinator <span>| Total</span></h5>

                            <div class="d-flex align-items-center">
                                <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                                    <i class="bi bi-people-fill"></i>
                                </div>
                                <div class="ps-3">
                                    <h6>@ViewBag.CoordinatorCount</h6>
                                    <span class="text-success small pt-1 fw-bold">@ViewBag.CoordinatorCountLastWeek</span> <span class="text-muted small pt-2 ps-1">new in last week</span>

                                </div>
                            </div>
                        </div>

                    </div>
                </div><!-- End Revenue Card -->
                <!-- Customers Card -->
                <div class="col-xxl-4 col-xl-12">

                    <div class="card info-card customers-card">
                        <div class="card-body">
                            <h5 class="card-title">Donors <span>| Total</span></h5>

                            <div class="d-flex align-items-center">
                                <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                                    <i class="bi bi-balloon-heart"></i>
                                </div>
                                <div class="ps-3">
                                    <h6>@ViewBag.DonorCount</h6>
                                    <span class="text-danger small pt-1 fw-bold">@ViewBag.DonorCountLastWeek</span> <span class="text-muted small pt-2 ps-1">new in last week</span>

                                </div>
                            </div>

                        </div>
                    </div>

                </div><!-- End Customers Card -->
               

            </div>
        </div>
    </div>
</section>