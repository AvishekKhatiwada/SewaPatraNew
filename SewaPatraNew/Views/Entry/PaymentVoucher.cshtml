@model SewaPatra.Models.PaymentVoucher;

@{
    ViewBag.Title = "Payment Voucher";
}
@if (TempData["Message"] != null)
{
    <div id="toastMessage" class="custom-toast">
        <i class="bi bi-check-circle-fill me-2"></i>@TempData["Message"]
    </div>
}
<div class="card-body">
    <div class="pagetitle mt-2">
        <h1>Payment Voucher</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item">Entry</li>
                <li class="breadcrumb-item">Payment Voucher</li>
            </ol>
        </nav>
    </div>
    <!-- Vertical Form -->
    <form method="post" asp-action="PaymentVoucher" asp-controller="Entry">
        <div class="row mb-2">
            <label asp-for="P_TranId" style="font-size: 13px;" class="col-sm-2 col-form-label">Transaction Id</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" style="font-size: 10px;" asp-for="P_TranId" id="TranId">
            </div>
            <label asp-for="Date" style="font-size: 13px;" class="col-sm-2 col-form-label">Date</label>
            <div class="col-sm-4">
                <input type="date" class="form-control" style="font-size: 10px;" asp-for="Date" id="enteredDate">
            </div>
        </div>       
        <div class="row mb-2">
            <label asp-for="Ledger_Name" style="font-size: 13px;" class="col-sm-2 col-form-label">Bank Name</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" style="font-size: 10px;" asp-for="Ledger_Name" id="remarks">
            </div>
        </div>
        <div class="row mb-2">
            <label asp-for="Amount" style="font-size: 13px;" class="col-sm-2 col-form-label">Amount</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" style="font-size: 10px;" asp-for="Amount" id="Amount">
            </div>
        </div>
        <div class="row mb-2">
            <label asp-for="Coordinator" style="font-size: 13px;" class="col-sm-2 col-form-label">Coordinator</label>
            <div class="col-sm-4">
                <select asp-for="Coordinator" asp-items="@ViewBag.coordinators" style="font-size: 10px;" class="form-select" aria-label="Select Coordinator">
                </select>
            </div>
        </div>
        <div class="row mb-2">
            <label asp-for="Remarks" style="font-size: 13px;" class="col-sm-2 col-form-label">Remarks</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" style="font-size: 10px;" asp-for="Remarks" id="remarks">
            </div>
        </div>
        <div class="text-Left">
            <button type="submit" class="btn btn-primary">Save</button>
            <a href="~/Entry/PaymentVoucherList" class="btn btn-primary">Cancel</a>
        </div>
    </form>
</div>
<script>
        document.addEventListener('DOMContentLoaded', function() {
        const enteredDateInput = document.getElementById('enteredDate');
        const today = new Date();
        const year = today.getFullYear();
        const month = String(today.getMonth() + 1).padStart(2, '0');
        const day = String(today.getDate()).padStart(2, '0');
        enteredDateInput.value = `${year}-${month}-${day}`;
    });
</script>