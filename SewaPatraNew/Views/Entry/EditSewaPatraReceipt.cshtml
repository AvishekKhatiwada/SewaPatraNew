@model SewaPatra.Models.SewaPatraReceipt;

@{
    ViewBag.Title = "SewaPatra Receipt";
}
@if (TempData["Message"] != null)
{
    <div id="toastMessage" class="custom-toast">
        <i class="bi bi-check-circle-fill me-2"></i>@TempData["Message"]
    </div>
}
<div class="card-body">
    <div class="pagetitle mt-2">
        <h1>SewaPatra Receipt</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item">Entry</li>
                <li class="breadcrumb-item">Edit SewaPatra Receipt</li>
                @* <li class="breadcrumb-item active">Add Area</li> *@
            </ol>
        </nav>
    </div>
    <!-- Vertical Form -->
    <form method="post" asp-action="EditSewaPatraReceipt" asp-controller="Entry">
        <div class="row mb-2">
            <label asp-for="SPR_TranId" style="font-size: 13px;font-weight:700;" class="col-sm-1 col-form-label">Receipt Id</label>
            <div class="col-sm-1">
                <input type="text" class="form-control" style="font-size: 10px;" asp-for="SPR_TranId" id="SPR_TranId">
            </div>
            <label asp-for="SPI_TranId" style="font-size: 13px;font-weight:700;" class="col-sm-1 col-form-label">Issue Id</label>
            <div class="col-sm-2">
                <select asp-for="SPI_TranId" asp-items="@ViewBag.SewaPatraIssues" style="font-size: 10px;" id="SewaPatraIssueId" class="form-select" aria-label="Select Issues Voucher"></select>
            </div>
            <label asp-for="Date" style="font-size: 13px;font-weight:700;" class="col-sm-1 col-form-label">Date</label>
            <div class="col-sm-4">
                <input type="date" class="form-control" style="font-size: 10px;" asp-for="Date" id="enteredDate" />
            </div>
        </div>
        @* <div class="row mb-2">

        </div> *@
        <div class="row mb-2">
            <label asp-for="Donor" style="font-size: 13px;font-weight:700;" class="col-sm-1 col-form-label">Donor</label>
            <div class="col-sm-4">
                <select asp-for="Donor" asp-items="@ViewBag.Donors" style="font-size: 10px;" class="form-select" id="Donorid" aria-label="Select Donor"></select>
            </div>
            <label asp-for="Coordinator" style="font-size: 13px;font-weight:700;" class="col-sm-1 col-form-label">Coordinator</label>
            <div class="col-sm-4">
                <select asp-for="Coordinator" asp-items="@ViewBag.Coordinators" style="font-size: 10px;" id="CoordinatorId" class="form-select" aria-label="Select Coordinator"></select>
            </div>
        </div>
        @* <div class="row mb-2">

        </div> *@
        <div class="row mb-2">
            <label asp-for="DonationBox" style="font-size: 13px;font-weight:700;" class="col-sm-1 col-form-label">SewaPatra</label>
            <div class="col-sm-4">
                <select asp-for="DonationBox" asp-items="@ViewBag.DonationBoxes" style="font-size: 10px;" id="SewapatraID" class="form-select" aria-label="Select DonationBox"></select>
            </div>
            <label asp-for="Receive_Date" style="font-size: 13px;font-weight:700;" class="col-sm-1 col-form-label">Issue Date</label>
            <div class="col-sm-4">
                <input type="date" class="form-control" style="font-size: 10px;" asp-for="Receive_Date" id="receiveDate">
            </div>
        </div>

        <div class="row mb-2">
            <label asp-for="Remarks" style="font-size: 13px;font-weight:700;" class="col-sm-1 col-form-label">Remarks</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" style="font-size: 10px;" asp-for="Remarks" id="remarks">
            </div>
        </div>
        <div class="text-Left">
            <button type="submit" class="btn btn-primary">Save</button>
            <a href="~/Entry/SewaPatraReceiptList" class="btn btn-primary">Cancel</a>
        </div>
    </form>
</div>